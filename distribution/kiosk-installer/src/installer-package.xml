<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>/</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/installer/scripts</directory>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/installer/templates/kioskApp</directory>
            <outputDirectory>applications/kioskApp</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/installer/templates/actionProvider</directory>
            <outputDirectory>applications/actionProvider</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/installer/chrome</directory>
            <outputDirectory>applications/chrome</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/installer/templates/common</directory>
            <outputDirectory>common</outputDirectory>
        </fileSet>
	</fileSets>
	<files>
        <file>
            <source>../common/src/main/cert/IPS_Root_CA.crt</source>
            <outputDirectory>ssl</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/ChromeProfile.zip</source>
            <outputDirectory>applications/chrome</outputDirectory>
        </file>
    </files>
	<dependencySets>
		<dependencySet>
            <unpack>true</unpack>
			<includes>
                <include>aero.sita.ips.thirdparty.jdk:OpenJDK17U*:zip</include>
                <include>aero.sita.ips.browsers:google-chrome-portable:tar.gz:bin</include>
			</includes>
			<outputDirectory>applications/thirdparty</outputDirectory>
		</dependencySet>
		<dependencySet>
            <unpack>true</unpack>
			<includes>
				<include>aero.sita.ips.cussplattform.tools:cfgvaluess:zip</include>
			</includes>
			<outputDirectory>installer/support_tools</outputDirectory>
		</dependencySet>
        <dependencySet>
            <includes>
                <include>com.materna.ips.cussbridge.installer:cuss-bridge-install-lib:jar:jar-with-dependencies</include>
            </includes>
            <outputDirectory>installer/support_tools</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.materna.ips.connect.kioskApp:kioskApp-service:jar</include>
            </includes>
            <outputDirectory>applications/kioskApp</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.materna.ips.connect.actionProvider:actionProvider:jar</include>
            </includes>
            <outputDirectory>applications/actionProvider</outputDirectory>
        </dependencySet>
	</dependencySets>
</assembly>
